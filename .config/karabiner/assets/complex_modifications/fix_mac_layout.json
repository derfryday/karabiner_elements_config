{
    "title": "make the MacOS keyboard layout usable for sane people",
    "rules": [
        {
            "description": "(mostly) fix the MacOS keyboard layout",
            "manipulators": [
                {
                    "from": {
                        "key_code": "close_bracket",
                        "modifiers": {
                            "mandatory": [
                                "right_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "n",
                            "modifiers": [
                                "left_option"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "grave_accent_and_tilde",
                        "modifiers": {
                            "mandatory": [
                                "right_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "7",
                            "modifiers": [
                                "left_option"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "q",
                        "modifiers": {
                            "mandatory": [
                                "right_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "l",
                            "modifiers": [
                                "right_option"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "7",
                        "modifiers": {
                            "mandatory": [
                                "right_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "8",
                            "modifiers": [
                                "right_option"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "0",
                        "modifiers": {
                            "mandatory": [
                                "right_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "9",
                            "modifiers": [
                                "right_option"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "8",
                        "modifiers": {
                            "mandatory": [
                                "right_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "5",
                            "modifiers": [
                                "right_option"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "9",
                        "modifiers": {
                            "mandatory": [
                                "right_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "6",
                            "modifiers": [
                                "right_option"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "hyphen",
                        "modifiers": {
                            "mandatory": [
                                "right_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "7",
                            "modifiers": [
                                "right_option",
                                "shift"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "print_screen",
                        "modifiers": {
                            "mandatory": [
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "4",
                            "modifiers": [
                                "left_command",
                                "shift",
                                "left_control"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "print_screen"
                    },
                    "to": [
                        {
                            "key_code": "3",
                            "modifiers": [
                                "left_command",
                                "shift",
                                "left_control"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
